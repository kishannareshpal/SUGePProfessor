<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SUGeP"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp" android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" android:fontFamily="@font/gilroy_extrabold"
            android:textColor="@color/colorPrimary" android:textSize="32sp" android:id="@+id/textView2"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Professor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" android:fontFamily="@font/gilroy_light"
            android:textColor="@color/colorPrimary" android:textSize="22sp" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView2"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sistema Único de Gestão Pedagógica"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" android:fontFamily="@font/gilroy_light"
            android:textColor="@color/black" android:textSize="14sp" android:id="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>


    <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="Continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:textColor="@color/white"
            app:layout_constraintDimensionRatio=""
            app:cornerRadius="8dp" android:fontFamily="@font/gilroy_extrabold"
            app:backgroundTint="@color/colorPrimary" android:padding="18dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint"/>
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>